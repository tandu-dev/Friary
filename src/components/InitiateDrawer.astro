---
import { Debug } from "astro:components";

export function getName(path:string)
{
    let name = path.replace(/^.*[\\/]/, '');
    name = name.replaceAll('%20', ' ');
    name = name.replaceAll('_', ' ');
    name = name.replace('.pdf', '');
    return  name;
}
const allMonographs = await Astro.glob('../content/initiate/*.pdf');

---
<div class="mx-2 flex-1 px-2 float-end font-bold">Monographs</div>
<div class="drawer lg:drawer-open drawer-end">
    
    <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col items-center justify-center">
      <!-- Page content here -->
      <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden">
        Open drawer
      </label>
    </div>
    <div class="drawer-side">
      <label for="my-drawer-2" aria-label="close sidebar" class="drawer-overlay"></label>
      <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
        <!-- Sidebar content here -->         
        {allMonographs.map((graph) => <li><a href={graph.default}>{getName(graph.default)}</a></li>)}
      </ul>
    </div>    
  </div>  
</div>
<style>
 a {
    color:blue;

  }

  a :visited {
    color: purple;
  }
</style>
